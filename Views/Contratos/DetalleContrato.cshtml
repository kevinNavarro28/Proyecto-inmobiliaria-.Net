@model Inmobiliaria.Models.Contratos

@{
    ViewData["Title"] = "DetalleContrato";
    var listaInmueble=(List<Inmobiliaria.Models.Inmuebles>)ViewBag.Inmuebles;
    var listaInquilino = (List<Inmobiliaria.Models.Inquilinos>)ViewBag.Inquilinos;


}

<h1>Detalle de Contrato</h1>

<div>
    <h4>Contratos</h4>
    <hr />
    <dl class="row">
      
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha_Inicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha_Inicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha_Fin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha_Fin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InmuebleId)
        </dt>
        <dd class = "col-sm-10">
            @if (listaInmueble != null)
    {
        var inmuebleId = Model.InmuebleId;
        var inmueble = listaInmueble.FirstOrDefault(i => i.Id == inmuebleId);
      
            @inmueble.Direccion
     
    }    
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InquilinoId)
        </dt>
        <dd class = "col-sm-10">
          @if (listaInquilino != null)
    {
        var inquilinoId = Model.InquilinoId;
        var inquilino = listaInquilino.FirstOrDefault(i => i.Id == inquilinoId);
      
                 var nombre = inquilino.Nombre+" "+inquilino.Apellido;
       @nombre;
       
    }
        </dd>
       
    </dl>
</div>

<div>
   <a href='@Url.Action("EditarContrato", new { id = Model.Id })' class="btn btn-sm btn-info">
										<i class="fa-solid fa-file-signature"></i>Editar</a> |
   <a asp-action="IndexC"><i class="fa-solid fa-left-long fa-2xl" style="color: #005eff;"></i></a> 
</div>
