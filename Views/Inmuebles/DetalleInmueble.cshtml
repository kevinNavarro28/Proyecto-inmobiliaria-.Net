@model Inmobiliaria.Models.Inmuebles

@{
    ViewData["Title"] = "Detalle de Inmueble";
    var listaPropietario = (List<Inmobiliaria.Models.Propietarios>)ViewBag.Propietario;

}

<h1>Detalle de Inmueble</h1>

<div>
    <h4>Inmuebles</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Uso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Uso)
        </dd>
          <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad_Ambientes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad_Ambientes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Superficie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Superficie)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Latitud)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Latitud)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Longitud)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Longitud)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PropietarioId)
        </dt>
        <dd class = "col-sm-10">
           @if (listaPropietario != null)
    {
        var propietarioId = Model.PropietarioId;
        var propietario = listaPropietario.FirstOrDefault(i => i.Id == propietarioId);
       
            var nombre = propietario.Nombre+" "+propietario.Apellido;
       @nombre;
    }
        </dd>
    </dl>
</div>
<div>
    <a href='@Url.Action("EditarInmueble", new { id = Model.Id })' class="btn btn-sm btn-info">
										<i class="fa-solid fa-house-medical-circle-exclamation"></i>Editar</a> 
